{
  // Exists as a base for src/tsconfig.json and test/tsconfig.json
  // Is also used to run mocha from tsa
  "compilerOptions": {
    "lib": [
      "dom",
      "es2015",
      "es6"
    ],
    "module": "commonjs",
    "target": "es5",
    "declaration": false,
    "strict": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./build/js",
    "rootDir": ".",
    "noEmitOnError": true
  },
  "include": [
    "./typings/**/*.d.ts",
    "./tools/**/*.ts"
  ]
}
