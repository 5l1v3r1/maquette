{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./build/js",
    "rootDir": "./src",
    "target": "es5",
    "noEmitOnError": true
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "bower_components",
    "browser-tests",
    ".vscode"
  ],
  "filesGlob": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./typings/**/*.ts"
  ]
}
